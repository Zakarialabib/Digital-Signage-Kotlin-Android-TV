<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SignagePro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryContainer">@color/primary_dark</item>
        <item name="android:colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:colorSecondaryContainer">@color/secondary_dark</item>
        <item name="android:colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Enable edge-to-edge -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources> 